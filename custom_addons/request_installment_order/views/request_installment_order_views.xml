<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_request_installment_order_form" model="ir.ui.view">
        <field name="name">request.installment.order.form</field>
        <field name="model">request.installment.order</field>
        <field name="arch" type="xml">
            <form string="Request Installment Order">
                <!-- Hidden fields for conditions -->
                <field name="status" invisible="1"/>
                <field name="purchase_order_count" invisible="1"/>
                
                <header>
                    <!-- Workflow buttons -->
                    <button name="action_submit" string="Submit for Approval" type="object" 
                            class="oe_highlight" invisible="status != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="oe_highlight" invisible="status != 'submitted'"/>
                    <button name="action_reject" string="Reject" type="object" 
                            invisible="status != 'submitted'"/>
                    <button name="action_create_purchase" string="Create Purchase Order" type="object" 
                            class="oe_highlight" invisible="status != 'approved'"/>
                    
                    <!-- Statusbar -->
                    <field name="status" widget="statusbar" statusbar_visible="draft,submitted,approved,done"/>
                </header>
                
                <sheet>
                    <!-- Smart button untuk Purchase Orders -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_orders" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-shopping-cart"
                                invisible="purchase_order_count == 0">
                            <field name="purchase_order_count" widget="statinfo" string="Purchase Orders"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="title" readonly="status not in ('draft',)"/>
                            <field name="description" readonly="status not in ('draft',)"/>
                            <field name="contact_id" readonly="status not in ('draft',)"/>
                        </group>
                        <!-- <group>
                            <field name="latitude" readonly="status not in ('draft',)"/>
                            <field name="longitude" readonly="status not in ('draft',)"/>
                        </group> -->
                    </group>
                    
                    <!-- Address Section -->
                    <group readonly="status not in ('draft',)">
                        <span class="o_form_label o_td_label">
                            <label for="street" string="Address" style="font-weight:bold;" nolabel="1"/>
                        </span>
                        <div class="o_address_format">
                            <field name="street" placeholder="Street..." class="o_address_street"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="city" placeholder="City" class="o_address_city"/>
                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            <div name="partner_address_country" class="d-flex justify-content-between">
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                        </div>
                    </group>
                    
                    <notebook>
                        <page string="Products">
                            <field name="product_line_ids" readonly="status not in ('draft',)">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Photos" name="page_photos">
                            <field name="image_ids" mode="kanban" nolabel="1"
                                readonly="status not in ('draft',)">
                                <kanban class="o_kanban_mobile">
                                    <field name="image"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="col-lg-3 col-md-3 col-6 px-1 py-1">
                                                <div class="card h-100 shadow-sm">
                                                    <img class="card-img-top"
                                                        t-att-src="kanban_image('request.installment.image',
                                                                                'image',
                                                                                record.id.raw_value)"/>
                                                    <div class="card-footer bg-white p-1 text-center">
                                                        <button name="unlink" type="object"
                                                                class="btn btn-sm btn-outline-danger"
                                                                confirm="Delete?">
                                                            <i class="fa fa-trash"/>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form>
                                    <sheet>
                                        <field name="image" widget="image" class="oe_avatar"
                                            options="{'size': [600, 400]}"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Location" name="location" readonly="status not in ('draft',)">
                            <group string="Interactive Map" name="map_group">
                                <div class="alert alert-info" role="alert">
                                    <i class="fa fa-info-circle"/>
                                    Click on the map to set the customer location. You can drag the marker to adjust the position.
                                </div>

                                <field name="shape"
                                       widget="geo_edit_map"
                                       nolabel="1"
                                       options="{'edit_map_height': 400, 'edit_map_width': '100%'}"
                                       style="height: 400px; width: 100%;"
                                       readonly="status not in ('draft',)"
                                       />
                            </group>
                            
                            <group string="Manual Coordinates Entry" name="coords_group" readonly="status not in ('draft',)">
                                <div class="alert alert-warning" role="alert">
                                    <i class="fa fa-exclamation-triangle"/>
                                    You can also enter coordinates manually. This will update the map location.
                                </div>

                                <group>
                                    <field name="latitude" digits="[16,6]" readonly="status not in ('draft',)"/>
                                    <field name="longitude" digits="[16,6]" readonly="status not in ('draft',)"/>
                                </group>

                                <group>
                                    <button string="Update Map from Coordinates"
                                            name="action_set_location_from_coordinates"
                                            type="object"
                                            class="btn-info"
                                            icon="fa-map-marker"/>
                                    <button string="Clear All Location Data"
                                            name="action_clear_location"
                                            type="object"
                                            class="btn-warning"
                                            icon="fa-trash"
                                            confirm="Are you sure you want to clear all location data?"/>
                                </group>
                            </group>
                            
                            <group string="Location Tools" name="tools_group" groups="base.group_system">
                                <div class="alert alert-secondary" role="alert">
                                    <i class="fa fa-wrench"/>
                                    Advanced tools for location management.
                                </div>

                                <field name="geo_wkt" readonly="1" string="PostGIS WKT Geometry"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_request_installment_order_tree" model="ir.ui.view">
        <field name="name">request.installment.order.tree</field>
        <field name="model">request.installment.order</field>
        <field name="arch" type="xml">
            <tree decoration-info="status == 'draft'" 
                  decoration-warning="status == 'submitted'"
                  decoration-success="status in ('approved', 'done')">
                <field name="title"/>
                <field name="contact_id"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="status" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_request_installment_order_search" model="ir.ui.view">
        <field name="name">request.installment.order.search</field>
        <field name="model">request.installment.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="contact_id"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="status"/>
                
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('status', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Done" name="done" domain="[('status', '=', 'done')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Contact" name="group_contact" domain="[]" context="{'group_by': 'contact_id'}"/>
                    <filter string="City" name="group_city" domain="[]" context="{'group_by': 'city'}"/>
                    <filter string="State" name="group_state" domain="[]" context="{'group_by': 'state_id'}"/>
                    <filter string="Country" name="group_country" domain="[]" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_request_installment_order" model="ir.actions.act_window">
        <field name="name">Request Installment Orders</field>
        <field name="res_model">request.installment.order</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_request_installment_order_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Request Installment Order!
            </p>
        </field>
    </record>
</odoo>