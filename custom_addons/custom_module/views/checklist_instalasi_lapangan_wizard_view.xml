<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="checklist_instalasi_lapangan_wizard_form_view" model="ir.ui.view">
        <field name="name">checklist.instalasi.lapangan.wizard.form</field>
        <field name="model">checklist.instalasi.lapangan.wizard</field>
        <field name="arch" type="xml">
            <form string="Checklist Instalasi Lapangan">
                <group>
                    <group>
                        <field name="delivery_id"/>
                        <field name="latitude" readonly="1"/>
                        <field name="longitude" readonly="1"/>
                    </group>
                    <group>
                        <!-- <field name="user_id"/> -->
                        <field name="officer_id"/>
                        <field name="information"/>
                    </group>
                </group>
                <field name="product_line_ids">
                    <tree edit="false" editable="false" create="false" delete="false">
                        <field name="product_id"/>
                        <field name="demand"/>
                        <field name="quantity"/>
                        <!-- <button name="action_checklist_instalasi"
                            string="Checklist Instalasi"
                            type="object"
                            icon="fa-external-link"/> -->
                    </tree>
                </field>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>